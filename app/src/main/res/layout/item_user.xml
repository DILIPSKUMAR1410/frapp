<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30sp"
    android:weightSum="1">


    <TextView
        android:id="@+id/emi"
        android:layout_width="92dp"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/loanamount"
        android:layout_alignStart="@+id/loanamount"
        android:layout_below="@+id/loanamount"
        android:text="EMI"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/loanamount"
        android:layout_width="92dp"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:text="loanamount"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/name"
        android:text="Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Loan Amount"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/loanamount"
        android:text="EMI"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/name"
        android:layout_width="92dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Name"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_alignBottom="@+id/emi"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/name"
        android:layout_toEndOf="@+id/emi"
        android:layout_toRightOf="@+id/emi"
        app:srcCompat="@mipmap/avatar1" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:width="100dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number"
        android:layout_below="@+id/emi"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-medium"
        android:text="Submit"
        android:textColor="@color/material_drawer_dark_primary_text"
        android:textSize="12sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/editText4"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignLeft="@+id/emi"
        android:layout_alignStart="@+id/emi" />

</RelativeLayout>